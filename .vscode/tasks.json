{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug (Reconfigure)",
            "type": "process",
            "command": "cmake",
            "args":[
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B",".",
                "-S","${workspaceFolder}",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"

        },
        {
            "label": "CMake Debug Build",
            "type": "process",
            "command": "time",
            "args":[
                "cmake",
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
			"problemMatcher": [
				"$gcc",
                "$nvcc"
			],
			"group": "build"

        },
        {
            "label": "CMake Build Debug `tests`",
            "type": "process",
            "command": "cmake",
            "args":[
                "--build",
                ".",
                "--target",
                "tests.tgt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc",
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Clean and Build Debug `tests`",
            "type": "process",
            "command": "cmake",
            "args":[
                "--build",
                ".",
                "--target",
                "tests.tgt",
                "--clean-first"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc",
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }

    ]
}